
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /daily_content/{dailyContentId} {
      // Allow public read access. Any client can get or list documents
      // in this collection.
      allow read: if true;

      // Allow write access only for authenticated users.
      // This is necessary for the client-side seeding to work.
      allow write: if request.auth != null;
    }
  }
}
