
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /daily_content/{dailyContentId} {
      // Allow public read access. Any client can get or list documents
      // in this collection.
      allow read: if true;

      // Deny all write operations by default. Data should be added via a
      // trusted backend, the Firebase console, or a specific seeding script.
      allow write: if false;
    }
  }
}
